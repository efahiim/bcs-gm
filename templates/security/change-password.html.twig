{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    {% include 'partials/nav.html.twig' %}

    <!-- CANVAS -->
    <section class="canvas content">
        <h1>Change Password</h1>
    </section>
    <!-- CANVAS END -->

    <!-- MAIN -->
    <main>
        {{ form_start(form) }}
        <div class="security-form">
            <div class="form-row">{{ form_row(form.oldPassword) }}</div>
            <div class="form-row">{{ form_row(form.plainPassword) }}</div>
            <div class="form-row">{{ form_row(form.submit) }}</div>
        </div>
        {{ form_end(form) }}
    </main>
    <!-- MAIN END -->
{% endblock %}
